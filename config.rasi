configuration {
  modi: "drun";
  display-drun: "îª‡";
  drun-display-format: "{name}";
  font: "Iosevka";
}

/* Dark theme. */
@import "~/.cache/wal/colors-rofi-dark"

window {
  location: center;
  width: 22%;
  height: 30%;
  spacing: 0;
  children: [ box ];
}

box {
  padding: 0.75em;
  spacing: 0.5em;
  children: [ entry, listview ];
}

entry {
  placeholder: "Search...";
  padding: 0.75em;
  expand: false;
}

element {
  text-color: @al;
  padding: 0.75em;
}
element selected {
  text-color: @fg;
}
element-text, element-icon {
  background-color: inherit;
  text-color: inherit;
}

listview, element, element selected, element-text, element-icon {
  cursor: pointer;
}
